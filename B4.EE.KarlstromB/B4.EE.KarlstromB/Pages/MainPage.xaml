<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="B4.EE.KarlstromB.Pages.MainPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="My drinks" 
                            Command="{Binding OpenOverviewPageCommand}" 
                            HorizontalOptions="Center" Padding="20,20,20,20" Margin="0,20,0,0" BackgroundColor="#017ED8" TextColor="White" FontAttributes="Bold" WidthRequest="150"/>
            <Button Text="My profile" 
                            Command="{Binding OpenSettingsPageCommand}" 
                            HorizontalOptions="Center" Padding="20,20,20,20" Margin="0,20,0,0" BackgroundColor="#017ED8" TextColor="White" FontAttributes="Bold" WidthRequest="150"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>